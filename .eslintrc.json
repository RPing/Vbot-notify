{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "one-var": ["warn", {
            "initialized": "never"
        }],
        "no-console": ["warn", {
            "allow": [
                "warn",
                "error"
            ]
        }],
        "curly": [
            "error",
            "multi-or-nest"
        ],
        "object-shorthand": [
            "error",
            "consistent"
        ],
        "radix": [
            "error",
            "as-needed"
        ],
        "consistent-return": ["off", {
            "treatUndefinedAsUnspecified": true
        }],
        "prefer-arrow-callback": ["error", {
            "allowNamedFunctions": true
        }],
        "no-plusplus": ["error", {
            "allowForLoopAfterthoughts": true
        }],
        "no-unused-vars": "warn",
        "no-shadow": "warn",
        "no-underscore-dangle": "off",
        "comma-dangle": "off",
        "prefer-template": "off",
        "func-names": "off",
        "no-prototype-builtins": "off",
        "camelcase": "off",
        "class-methods-use-this": "off"
    }
}
